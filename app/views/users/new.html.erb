<%= form_for @user do |u| %>
    <%= u.label :Username %>:<br>
    <%= u.text_field :username, placeholder: "What's your name?" %><br>
    <%= u.label :Email %>:<br>
    <%= u.text_field :email, placeholder: "example@example.com" %><br>
    <%= u.label :Password %>:<br>
    <%= u.text_field :password %><br>
    <%= u.submit "Create" %>
<% end %>