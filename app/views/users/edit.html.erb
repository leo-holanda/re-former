<%= form_for @user do |f| %>
    
    <%= f.label :username %><br>
    <%= f.text_field :username, placeholder: 'What\'s your name?' %><br>

    <%= f.label :email %><br>
    <%= f.text_field :email, placeholder: 'example@example.com' %><br>
    
    <%= f.label :password %><br>
    <%= f.text_field :password, type: 'password' %><br>
    
    <%= f.submit 'Edit' %>
<% end %>